{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["compat"],
  "extends": ["plugin:compat/recommended"],
  "rules": {
    "compat/compat": "error"
  },
  "settings": {
    "polyfills": ["fetch"],
    "lintAllEsApis": true,
    "browsers": ["chrome 72"],
    "ignores": ["dist", "node_modules", "build", "src/**/*.{test}.js"]
  }
}